<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="10dp"
    tools:context="ltd.akhbod.omclasses.UploadActivity">

    <ProgressBar
        android:id="@+id/upload_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="1dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/red"
        android:max="100"
        android:progressTint="@color/colorAccent"
        android:visibility="gone"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/upload_image"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:background="@color/green"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingBottom="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name     : "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="                                              "
                android:textColorLink="@android:color/holo_orange_dark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address        : "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="                                              "
                android:textColorLink="@android:color/holo_orange_dark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard       : "
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/upload_standeredSpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:popupBackground="@android:color/white"
                android:textColorLink="@android:color/holo_orange_dark" />

        </TableRow>

        <TableRow
            android:id="@+id/subject_checkbox_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:visibility="invisible">

            <CheckBox
                android:id="@+id/checkBox_maths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="maths" />

            <CheckBox
                android:id="@+id/checkBox_science"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="science" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durartion      : "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_durationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="                                              "
                android:inputType="number"
                android:textColorLink="@android:color/holo_orange_dark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School           : "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="                                              "
                android:textColorLink="@android:color/holo_orange_dark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No     : "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/upload_mobNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="                                              "
                android:inputType="number"
                android:textColorLink="@android:color/holo_orange_dark" />

        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/upload_uploadBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:text="upload" />


</LinearLayout>
